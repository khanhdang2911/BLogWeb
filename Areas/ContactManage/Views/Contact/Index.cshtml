@using CS68_MVC1.Models
@model List<Contact>

<h1 class="alert alert-success">Các bài viết được gửi từ User</h1>
<partial name="_StatusMessage"/>
<hr>
<table>
    <tr>
        <th style="border: 1px solid black; padding: 8px;">Họ Tên</th>
        <th style="border: 1px solid black; padding: 8px;">Ngày gửi</th>
        <th style="border: 1px solid black; padding: 8px;">Email</th>
        <th style="border: 1px solid black; padding: 8px;">Tác vụ</th>

        
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td style="border: 1px solid black; padding: 8px;">@item.name</td>
            <td style="border: 1px solid black; padding: 8px;">@item.DateSent</td>
            <td style="border: 1px solid black; padding: 8px;">@item.email</td>
            
            <td style="border: 1px solid black; padding: 8px;">
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Xem chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Xóa</a>
             </td>
        
        </tr>
    }

</table>
